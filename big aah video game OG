  requestAnimationFrame(animate);

  // Example: Trigger voice lines based on game events
  if (Math.random() < 0.01) {
    playCommanderVoice(yamato, 'enemySpotted');
  }

  // Render the scene
  renderer.render(scene, camera);
}

