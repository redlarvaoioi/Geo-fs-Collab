    model,
    fuselageColor: 0x888888,
    wingColor: 0xffffff,
    engineColor: 0x333333,
    position,
  });
  scene.add(airplane);
});

// Animation Loop
function animate() {
  requestAnimationFrame(animate);

  renderer.render(scene, camera);
}

